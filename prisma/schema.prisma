generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id   Int     @id @default(autoincrement())
  uuid     String  @unique @default("")
  nama     String  @default("")
  email    String  @unique @default("")
  password String  @default("")
  alamat   String  @default("")
  telepon  String  @unique
  foto     String  @default("")
  role     Role    @default(CUSTOMER)
  order    Order[]
}

enum Role {
  ADMIN
  CUSTOMER
}

model Order {
  idOrder     Int        @id @default(autoincrement())
  uuid        String     @unique @default("")
  user        User       @relation(fields: [userId], references: [id])
  userId      Int
  status      Status     @default(NEW)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  metodeBayar Metode     @default(CASH)
  subOrder    SubOrder[]
}

enum Status {
  NEW
  PAID
  DONE
}

enum Metode {
  CASH
  QRIS
}

model SubOrder {
  idSubOrder Int    @id @default(autoincrement())
  uuid       String @unique @default("")
  order      Order  @relation(fields: [orderId], references: [idOrder])
  orderId    Int
  produk     Produk @relation(fields: [produkId], references: [idProduk])
  produkId   Int
}

model Produk {
  idProduk Int        @id @default(autoincrement())
  uuid     String     @unique @default("")
  nama     String     @default("")
  desc     String     @default("") @db.Text
  harga    Int
  stok     Int
  category Category   @default(BAJU)
  foto     String     @default("")
  SubOrder SubOrder[]
}

enum Category {
  BAJU
  GANTUNGAN
  STIKER
}
